<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BoardList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAlignment="center"
            android:text="                레시피 게시판"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/searchbutton"
            android:background="#00ff0000"/>
    </LinearLayout>

    <!-- 마크정식 짜파구리 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageButton
                android:id="@+id/recipeButton1"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:src="@drawable/recipe1"
                android:scaleType="fitXY"
                android:background="#00ff0000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마크정식"
                    android:textSize="15dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="103dp"
                    android:src="@drawable/bookmark"
                    android:background="#00ff0000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:src="@drawable/recipe2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="짜파구리"
                    android:textSize="15dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="95dp"
                    android:src="@drawable/bookmark"
                    android:background="#00ff0000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 오감자치즈후라이 기범주 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:src="@drawable/recipe3"
                android:scaleType="fitXY"
                android:background="#00ff0000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오감자치즈후라이"
                    android:textSize="15dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="47dp"
                    android:src="@drawable/bookmark"
                    android:background="#00ff0000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:src="@drawable/recipe4"
                android:scaleType="fitXY"
                android:background="#00ff0000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기범주"
                    android:textSize="15dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="107dp"
                    android:src="@drawable/bookmark"
                    android:background="#00ff0000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 꿀호떡맥머핀 사리곰탕만둣국 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:src="@drawable/recipe5"
                android:scaleType="fitXY"
                android:background="#00ff0000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="꿀호떡맥머핀"
                    android:textSize="15dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="76dp"
                    android:src="@drawable/bookmark"
                    android:background="#00ff0000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:src="@drawable/recipe6"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사리곰탕만둣국"
                    android:textSize="15dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="55dp"
                    android:src="@drawable/bookmark"
                    android:background="#00ff0000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>