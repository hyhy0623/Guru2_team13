<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecipeFragment"
    android:id="@+id/fragment_recipe">

    <!-- TODO: Update blank fragment layout -->
    <!--
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BoardList">-->

    <!-- 레시피 게시판 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="                레시피 게시판"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btnSearch_recipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:src="@drawable/searchbutton"
            android:background="#00ff0000"/>
    </LinearLayout>

    <!-- 레시피 리스트 전체 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- 마크정식 불닭장칼국수 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="23dp">

                    <ImageButton
                        android:id="@+id/recipeButton1"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe1"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="마크정식"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:id="@+id/recipe_mark1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe2"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="불닭장칼국수"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:id="@+id/recipe_mark2" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 딸기수박에이드 불닭짜파게티 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton3"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe3"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="딸기수박에이드"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:id="@+id/recipe_mark3"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton4"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe4"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="불닭짜파게티"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:id="@+id/recipe_mark4" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 소치콘볶이 돼지게티 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton5"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe5"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="소치콘볶이"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:id="@+id/recipe_mark5"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton6"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe6"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="돼지게티"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:id="@+id/recipe_mark6"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 밀키스에이드 헤이즐넛바나나 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton7"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe7"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="밀키스에이드"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:id="@+id/recipe_mark7" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton8"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe8"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="헤이즐넛바나나"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:id="@+id/recipe_mark8"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- fab 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_write"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:fabCustomSize="80dp"
        android:backgroundTint="#0000"
        app:maxImageSize="100dp"
        app:srcCompat="@drawable/button_write" />
</FrameLayout>