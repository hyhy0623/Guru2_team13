<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/advertiseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/advertise1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="편의점별 신제품"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <Button
                android:id="@+id/CU_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/cu_btn"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/GS_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/gs_btn"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/SE_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/se_btn"
                android:background="@android:color/transparent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="인기 레시피"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>
            <Button
                android:id="@+id/recipe_Btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="더보기>"
                android:textColor="#000000"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp">

                    <ImageButton
                        android:id="@+id/recipeButton1"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe1"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="마크정식"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:checked="true"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp">

                    <ImageButton
                        android:id="@+id/recipeButton2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe2"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="불닭장칼국수"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:checked="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton3"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe3"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="딸기수박에이드"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:checked="true"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageButton
                        android:id="@+id/recipeButton4"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/recipe4"
                        android:scaleType="fitXY"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="불닭짜파게티"
                            android:textSize="15dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox_bookmark"
                            android:checked="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
</ScrollView>