<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_gravity="center">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager_ad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="7dp"
                    android:layout_gravity="bottom|center"/>
                <!--app:ci_drawable="@drawable/indicator_selected"
                app:ci_drawable_unselected="@drawable/indicator_unselected"
                app:ci_gravity="center"-->

            </FrameLayout>
            <!--<ImageView
                android:id="@+id/advertiseImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/advertise1" />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="편의점별 신제품"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <Button
                    android:id="@+id/CU_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/cu_btn"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/GS_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/gs_btn"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/SE_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/se_btn"
                    android:background="@android:color/transparent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="인기 레시피"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"/>
                <Button
                    android:id="@+id/recipe_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="더보기>"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <ImageButton
                            android:id="@+id/recipeButton1"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/recipe1"
                            android:scaleType="fitXY"
                            android:background="#00ff0000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:text="     마크정식"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <ImageButton
                            android:id="@+id/recipeButton2"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/recipe2"
                            android:scaleType="fitXY"
                            android:background="#00ff0000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:text="     불닭장칼국수"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="20dp">

                        <ImageButton
                            android:id="@+id/recipeButton3"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/recipe3"
                            android:scaleType="fitXY"
                            android:background="#00ff0000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:text="     딸기수박에이드"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="20dp">

                        <ImageButton
                            android:id="@+id/recipeButton4"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/recipe4"
                            android:scaleType="fitXY"
                            android:background="#00ff0000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:text="     불닭짜파게티"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:fabCustomSize="80dp"
        android:backgroundTint="#0000"
        app:maxImageSize="100dp"
        app:srcCompat="@drawable/button_map"
         />
    <!-- TODO: Update blank fragment layout -->
</RelativeLayout>