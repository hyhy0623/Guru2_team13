<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewGS">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="이 달의 GS25 신제품"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/box_new2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <FrameLayout
                    android:id="@+id/product2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_background">

                    <ImageView
                        android:id="@+id/productImage2"
                        android:layout_width="wrap_content"
                        android:layout_height="350dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gs1" />

                    <TextView
                        android:id="@+id/productName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="30dp"
                        android:text="#GS 행운약과라떼 #유어스"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/heartCheck2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_margin="30dp"
                        android:background="@drawable/checkbox_heart"
                        android:button="@android:color/transparent"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_new5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <FrameLayout
                    android:id="@+id/product5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_background">

                    <ImageView
                        android:id="@+id/productImage5"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gs2" />

                    <TextView
                        android:id="@+id/productName5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="30dp"
                        android:text="#GS #하이면순두부짬뽕 #삼립"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/heartCheck5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_margin="30dp"
                        android:background="@drawable/checkbox_heart"
                        android:button="@android:color/transparent"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_new8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <FrameLayout
                    android:id="@+id/product8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_background">

                    <ImageView
                        android:id="@+id/productImage8"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gs3" />

                    <TextView
                        android:id="@+id/productName8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="30dp"
                        android:text="#GS #솔티카라멜휘낭시에 #브레디크"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/heartCheck8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_margin="30dp"
                        android:background="@drawable/checkbox_heart"
                        android:button="@android:color/transparent"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_new11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <FrameLayout
                    android:id="@+id/product11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_background">

                    <ImageView
                        android:id="@+id/productImage11"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gs4" />

                    <TextView
                        android:id="@+id/productName11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="30dp"
                        android:text="#GS #생크림도넛(레몬크림) #매일우유"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/heartCheck11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_margin="30dp"
                        android:background="@drawable/checkbox_heart"
                        android:button="@android:color/transparent"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_new14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <FrameLayout
                    android:id="@+id/product14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_background">

                    <ImageView
                        android:id="@+id/productImage14"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gs5" />

                    <TextView
                        android:id="@+id/productName14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="30dp"
                        android:text="#GS #양념치킨도시락 #페리카나"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/heartCheck14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_margin="30dp"
                        android:background="@drawable/checkbox_heart"
                        android:button="@android:color/transparent"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>